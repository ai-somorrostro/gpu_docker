# =============================================================================
# HYPERPARAMETER TUNING WITH RAY TUNE
# =============================================================================
# ./train.sh train_yolo_with_ray_tune.py datasets/coco8/coco8 config/coco8.yaml env.tune.example

# =============================================================================
# BASIC TRAINING PARAMETERS
# =============================================================================

EPOCHS=20
BATCH_SIZE=32
IMG_SIZE=640
PATIENCE=20

# Model configuration
MODEL=yolov8n.pt

# LÃ­mite de VRAM (0.0-1.0, donde 1.0 = 100%)
VRAM_FRACTION=1.0

# =============================================================================
# RAY TUNE CONFIGURATION
# =============================================================================

# Number of hyperparameter search iterations
TUNE_ITERATIONS=50

# Grace period for ASHA early stopping (epochs before trials can be stopped)
TUNE_GRACE_PERIOD=10

# Metric to optimize ('metrics/mAP50(B)' for mAP@0.5)
TUNE_METRIC=metrics/mAP50(B)

# =============================================================================
# RAY TUNE HYPERPARAMETER SEARCH RANGES
# =============================================================================
# These define the search space for hyperparameter optimization.
# Format: PARAM_MIN and PARAM_MAX for each tunable parameter.
# Ray Tune will use tune.uniform(MIN, MAX) for each parameter.

# Learning rate search range
LR0_MIN=0.00001
LR0_MAX=0.01

# Final learning rate factor range
LRF_MIN=0.01
LRF_MAX=1.0

# Momentum range (for SGD)
MOMENTUM_MIN=0.6
MOMENTUM_MAX=0.98

# Weight decay range
WEIGHT_DECAY_MIN=0.0
WEIGHT_DECAY_MAX=0.001

# Warmup epochs range
WARMUP_EPOCHS_MIN=0.0
WARMUP_EPOCHS_MAX=5.0

# Box loss weight range
BOX_LOSS_MIN=0.02
BOX_LOSS_MAX=0.2

# Class loss weight range
CLS_LOSS_MIN=0.2
CLS_LOSS_MAX=4.0

# HSV-H augmentation range
HSV_H_MIN=0.0
HSV_H_MAX=0.1

# HSV-S augmentation range
HSV_S_MIN=0.0
HSV_S_MAX=0.9

# HSV-V augmentation range
HSV_V_MIN=0.0
HSV_V_MAX=0.9

# Rotation degrees range
DEGREES_MIN=0.0
DEGREES_MAX=45.0

# Translation range
TRANSLATE_MIN=0.0
TRANSLATE_MAX=0.9

# Scale range
SCALE_MIN=0.0
SCALE_MAX=0.9

# Shear range
SHEAR_MIN=0.0
SHEAR_MAX=10.0

# Perspective range
PERSPECTIVE_MIN=0.0
PERSPECTIVE_MAX=0.001

# Flip probabilities range
FLIPUD_MIN=0.0
FLIPUD_MAX=1.0

FLIPLR_MIN=0.0
FLIPLR_MAX=1.0

# Mosaic augmentation range
MOSAIC_MIN=0.0
MOSAIC_MAX=1.0

# Mixup augmentation range
MIXUP_MIN=0.0
MIXUP_MAX=1.0
