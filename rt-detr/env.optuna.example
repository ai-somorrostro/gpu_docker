
# ===========================
# RT-DETR TRAINING PARAMETERS
# ===========================

# Model configuration
MODEL=rtdetr-l.pt         # rtdetr-l.pt, rtdetr-x.pt
OPTIMIZER=Adam            # Adam, SGD, AdamW, auto

# Basic training settings
EPOCHS=50                 # Number of epochs per trial
BATCH_SIZE=-1             # Batch size (-1 = auto)
IMG_SIZE=640              # Image size (640, 1280, etc.)
PATIENCE=20               # Early stopping patience

# VRAM management (0.0-1.0, where 1.0 = 100%)
VRAM_FRACTION=0.90        # 90% of available VRAM

# ===========================
# OPTUNA CONFIGURATION
# ===========================

# Search configuration
TUNE_ITERATIONS=50        # Number of trials
TUNE_GRACE_PERIOD=10      # Warmup trials before pruning
TUNE_METRIC=metrics/mAP50(B)  # Metric to optimize

# ===========================
# HYPERPARAMETER SEARCH SPACE
# ===========================

# Learning rate initial (lr0)
LR0_MIN=0.0001
LR0_MAX=0.01

# Learning rate final (lrf)
LRF_MIN=0.01
LRF_MAX=0.5

# HSV-Saturation augmentation
HSV_S_MIN=0.0
HSV_S_MAX=0.9

# HSV-Value augmentation  
HSV_V_MIN=0.0
HSV_V_MAX=0.9

# Rotation degrees
DEGREES_MIN=0.0
DEGREES_MAX=45.0

# Translation
TRANSLATE_MIN=0.0
TRANSLATE_MAX=0.3

# Scale
SCALE_MIN=0.0
SCALE_MAX=0.9

# Shear
SHEAR_MIN=0.0
SHEAR_MAX=10.0

# Mixup augmentation
MIXUP_MIN=0.0
MIXUP_MAX=1.0

# ===========================
# FIXED AUGMENTATION PARAMS
# (Not tuned by Optuna)
# ===========================

WORKERS=2
PERSPECTIVE=0.0
FLIPUD=0.0
FLIPLR=0.5
HSV_H=0.015
MOSAIC=1.0
CLOSE_MOSAIC=10
